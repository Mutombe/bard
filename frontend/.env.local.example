# =========================
# BARDIQ JOURNAL - FRONTEND ENVIRONMENT
# =========================
# Copy this file to .env.local

# =========================
# API Configuration
# =========================
# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL for real-time data
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# =========================
# Google OAuth
# =========================
# Google OAuth Client ID (same as backend GOOGLE_OAUTH_CLIENT_ID)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=

# =========================
# Analytics (Optional)
# =========================
# Google Analytics
NEXT_PUBLIC_GA_ID=

# =========================
# Feature Flags
# =========================
# Enable premium features
NEXT_PUBLIC_ENABLE_PREMIUM=true

# Enable real-time market data
NEXT_PUBLIC_ENABLE_REALTIME=true

# =========================
# Production Overrides
# =========================
# Uncomment for production deployment
# NEXT_PUBLIC_API_URL=https://api.bardiqjournal.com
# NEXT_PUBLIC_WS_URL=wss://api.bardiqjournal.com
