# =========================
# BARDIQ JOURNAL - ENVIRONMENT VARIABLES
# =========================
# Copy this file to .env and fill in the values
#
# For local development: Most defaults work out of the box
# For production: Update all values marked with [REQUIRED]

# =========================
# ENVIRONMENT
# =========================
# Set to "production" for production deployment
ENVIRONMENT=development

# =========================
# DJANGO SETTINGS
# =========================
# [REQUIRED for production] Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=django-insecure-dev-key-change-in-production

# Debug mode (set to false in production)
DEBUG=true

# Django settings module
DJANGO_SETTINGS_MODULE=config.settings.development

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# =========================
# DATABASE
# =========================
# PostgreSQL password for Docker
POSTGRES_PASSWORD=bard_secure_password

# [REQUIRED for production] Full database URL
# For Docker: postgres://bard_user:${POSTGRES_PASSWORD}@db:5432/bard_db
# For external: postgres://user:password@host:5432/database
DATABASE_URL=postgres://bard_user:bard_secure_password@db:5432/bard_db

# Optional: Read replica for scaling
# DATABASE_REPLICA_URL=

# =========================
# REDIS
# =========================
# Redis URL for caching and Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1

# =========================
# CORS (Cross-Origin)
# =========================
# [REQUIRED] Frontend URLs that can access the API
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =========================
# EXTERNAL API KEYS
# =========================
# YouTube Data API
YOUTUBE_API_KEY=

# Polygon.io for market data
POLYGON_API_KEY=

# NewsAPI for news aggregation
NEWSAPI_KEY=

# Unsplash for dynamic images
UNSPLASH_ACCESS_KEY=

# Alpha Vantage for global market data (free tier: 5 calls/min, 500 calls/day)
# Get your key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_KEY=

# =========================
# GOOGLE OAUTH
# =========================
# Get credentials from Google Cloud Console: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# =========================
# EMAIL (SMTP)
# =========================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@bardglobal.com
ADMIN_EMAIL=admin@bardglobal.com
EMAIL_USE_TLS=true
SITE_URL=https://bardglobal.com

# =========================
# AWS S3 (Optional - for production media storage)
# =========================
USE_S3=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=af-south-1

# =========================
# MONITORING (Optional)
# =========================
# Sentry DSN for error tracking
SENTRY_DSN=

# =========================
# FRONTEND
# =========================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# =========================
# MAINTENANCE MODE
# =========================
MAINTENANCE_MODE=false
