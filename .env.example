# =========================
# BARDIQ JOURNAL - ENVIRONMENT VARIABLES
# =========================
# Copy this file to .env and fill in the values

# ----- Django -----
SECRET_KEY=your-secret-key-here
DEBUG=false
ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com,.bardiqjournal.com
DJANGO_SETTINGS_MODULE=config.settings.production

# ----- Database -----
DATABASE_URL=postgres://user:password@host:5432/bardiq

# ----- Redis -----
REDIS_URL=redis://localhost:6379/0

# ----- CORS -----
CORS_ALLOWED_ORIGINS=https://bardiqjournal.com,https://bardiq-frontend.onrender.com

# ----- AWS S3 (Optional) -----
USE_S3=false
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=af-south-1

# ----- Email (SendGrid) -----
SENDGRID_API_KEY=

# ----- Sentry (Optional) -----
SENTRY_DSN=

# ----- External APIs -----
YOUTUBE_API_KEY=
POLYGON_API_KEY=
NEWS_API_KEY=

# ----- Frontend -----
NEXT_PUBLIC_API_URL=http://localhost:8000
